<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:id="content"
  fx:controller="DesktopManager.windows.StartWindow.StartWindowController">

  <ScrollPane>
    <TableView fx:id="botsTable">
      <columns>
        <TableColumn text="Наименование">
          <cellValueFactory>
            <PropertyValueFactory property="botName"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="Описание">
          <cellValueFactory>
            <PropertyValueFactory property="botDescription"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="Статус">
          <cellValueFactory>
            <PropertyValueFactory property="botStatus"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="Кнопки">
          <cellValueFactory>
            <PropertyValueFactory property="buttons"/>
          </cellValueFactory>
        </TableColumn>
      </columns>
    </TableView>
  </ScrollPane>
  <HBox>
    <Button fx:id="addBotButton" onAction="#onAddBotButtonClick">Добавить нового бота</Button>
  </HBox>

</VBox>
